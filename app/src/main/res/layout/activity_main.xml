<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:context=".MainActivity">


    <TextView
        android:layout_marginTop="15dp"
        android:id="@+id/txtTask1"
        android:text="TASK 1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <EditText
        android:inputType="number"
        android:id="@+id/edtN"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_marginEnd="15dp"
        android:layout_marginTop="15dp"
        app:layout_constraintStart_toEndOf="@id/txtN"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txtTask1" />

    <TextView
        android:gravity="center_vertical"
        android:id="@+id/txtN"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:layout_marginTop="15dp"
        android:layout_marginStart="15dp"
        android:text="Enter N:"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txtTask1" />

    <EditText
        android:inputType="number"
        android:id="@+id/edtK"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_marginEnd="15dp"
        android:layout_marginTop="15dp"
        app:layout_constraintStart_toEndOf="@id/txtN"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/edtN" />

    <TextView
        android:gravity="center_vertical"
        android:id="@+id/txtK"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:layout_marginTop="15dp"
        android:layout_marginStart="15dp"
        android:text="Enter K:"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txtN" />


    <Button
        android:text="Task1"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@id/edtK"
        app:layout_constraintEnd_toStartOf="@id/txtResult"
        android:id="@+id/btnResultTask1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:layout_marginTop="15dp"
        android:gravity="center_vertical"
        android:id="@+id/txtResult"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:text="Result:"
        app:layout_constraintTop_toBottomOf="@id/edtK"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


    <TextView
        android:layout_marginTop="40dp"
        android:id="@+id/txtTask2"
        android:text="TASK 2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/txtResult"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:gravity="center_vertical"
        android:id="@+id/txtString"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:layout_marginTop="30dp"
        android:layout_marginStart="15dp"
        android:text="Enter String:"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txtTask2" />

    <EditText
        android:id="@+id/edtString"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_marginEnd="15dp"
        android:layout_marginTop="30dp"
        app:layout_constraintStart_toEndOf="@id/txtString"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txtTask2" />

    <Button
        android:text="Task2"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@id/edtString"
        app:layout_constraintEnd_toStartOf="@id/txtResultTask2"
        android:id="@+id/btnResultTask2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:layout_marginTop="15dp"
        android:gravity="center_vertical"
        android:id="@+id/txtResultTask2"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:text="Result:"
        app:layout_constraintTop_toBottomOf="@id/edtString"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


    <TextView
        android:layout_marginTop="40dp"
        android:id="@+id/txtTask3"
        android:text="TASK 3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/txtResultTask2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:gravity="center_vertical"
        android:id="@+id/txtArrayOfA"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:layout_marginTop="30dp"
        android:layout_marginStart="15dp"
        android:text="Enter Array Of A:"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txtTask3" />

    <EditText
        android:id="@+id/edtArrayOfA"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_marginEnd="15dp"
        android:layout_marginTop="30dp"
        app:layout_constraintStart_toEndOf="@id/txtArrayOfA"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txtTask3" />

    <TextView
        android:gravity="center_vertical"
        android:id="@+id/txtArrayOfB"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:layout_marginTop="30dp"
        android:layout_marginStart="15dp"
        android:text="Enter Array Of B:"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txtArrayOfA" />

    <EditText
        android:id="@+id/edtArrayOfB"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_marginEnd="15dp"
        android:layout_marginTop="30dp"
        app:layout_constraintStart_toEndOf="@id/txtArrayOfB"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txtArrayOfA" />

    <Button
        android:text="Task3"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@id/edtArrayOfB"
        app:layout_constraintEnd_toStartOf="@id/txtResultTask3"
        android:id="@+id/btnResultTask3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:layout_marginTop="15dp"
        android:gravity="center_vertical"
        android:id="@+id/txtResultTask3"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:text="Result:"
        app:layout_constraintTop_toBottomOf="@id/edtArrayOfB"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>